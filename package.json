{
    "name": "vscode-code-jump",
    "displayName": "Code Jump",
    "description": "Fast cursor navigation for VS Code - jump to any position in the visible editor area with a few keystrokes",
    "version": "1.0.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/OxideOps/code-jump.git"
    },
    "license": "GPL-3.0-or-later",
    "publisher": "OxideOps",
    "engines": {
        "vscode": "^1.44.0"
    },
    "icon": "media/icon.jpg",
    "categories": [
        "Other",
        "Keymaps"
    ],
    "keywords": [
        "navigation",
        "cursor",
        "jump",
        "productivity",
        "motion",
        "teleport",
        "acejump",
        "vim",
        "code-jump",
        "quick-jump",
        "jumpy",
        "easymotion"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "code-jump.startJump",
                "title": "Code Jump: Start Jump"
            },
            {
                "command": "code-jump.escapeJumpMode",
                "title": "Code Jump: Exit Jump Mode"
            }
        ],
        "keybindings": [
            {
                "command": "code-jump.startJump",
                "key": "ctrl+;",
                "mac": "cmd+;",
                "when": "editorTextFocus && !code-jump.inJumpMode"
            },
            {
                "command": "code-jump.escapeJumpMode",
                "key": "ctrl+;",
                "mac": "cmd+;",
                "when": "!editorTextFocus && code-jump.inJumpMode"
            }
        ],
        "configuration": {
            "title": "Code Jump",
            "properties": {
                "code-jump.inlineLabels": {
                    "type": "boolean",
                    "default": false,
                    "description": "Display jump labels inline with the text rather than overlaid on top of it"
                },
                "code-jump.decorationColor": {
                    "type": "string",
                    "default": "#569cd6",
                    "description": "Color used for code-jump decorations (hex format)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.34.0",
        "@types/node": "^22.15.2",
        "@types/vscode": "^1.44.0",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "@vscode/vsce": "^3.6.0",
        "eslint": "^9.34.0",
        "globals": "^16.3.0",
        "jiti": "^2.5.1",
        "ts-loader": "^9.3.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.41.0",
        "webpack": "^5.76.0",
        "webpack-cli": "^6.0.1"
    }
}